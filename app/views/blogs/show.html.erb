<div class="container">
 <div class="row">
  <h1>投稿詳細</h1>
   <table>
     <tr>
       <td class: title><%= @blog.title %></td>
     </tr>
    <tbody>
     <tr>
      <td>
       <div class="blogs"></div>
       <%= link_to blog_path(@blog) do %>
       <%= attachment_image_tag @blog, :image, :fill, 360, 240, format: 'jpeg' %>
       <% end %>
      </td>
     </tr>
    </tbody>
   </table>
 </div>
</div>

<%= form_with(model:[@blog, @post_comment], method: :post) do |f| %>
 <%= f.text_field :comment %>
 <%= f.hidden_field :blog_id, value: @blog.id %>
 <%= f.submit 'コメントする' %>
<% end %>

= form_with(model:[@blog, @comment], method: :post) do |f|
   = f.text_area :comment_content
   = f.hidden_field :blog_id, value: @blog.id
   = f.submit 'コメントする'