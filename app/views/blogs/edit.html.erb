<div class="row">
	<div class="col-md-6 col-md-offset-3">
   <h2>投稿編集</h2>
    <% if @blog.errors.any? %>
      <div class="alert alert-warning">
       <div><%= @blog.errors.count %> error prohibited this book from being saved:</div>
        <ul>
          <% @blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model:@blog, url:"/blogs/#{@blog.id}", local:true do |f| %>
     <h4>投稿</h4>
     <%= f.text_field :title %>
     <h4>内容</h4>
     <%= f.text_area :body %>
     <%= f.submit '変更' %>
    <% end %>
    <%= link_to 'Show', @blog %> |
    <%= link_to 'Back', blogs_path %>

	</div>
	<div class="col-md-3"></div>

</div>
