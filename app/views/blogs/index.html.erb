<h1>全ての投稿</h1>

<table>
  <tread>
    <tr>
      <th>投稿</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </tread>

 <tbody>
   <% @blogs.each do |blog| %>
    <tr>
     <td><%= link_to blog.title, blog_path(blog), class: "blog_#{blog.id}" %></td>
     <td><%= blog.body %></td>
     <td><%= link_to 'Destroy', blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy_#{blog.id}" %></td>
    </tr>
   <% end %>
 </tbody>
</table>

<h2>新規投稿</h2>
<%= form_with model: @blog, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title, class: "form-control" %>

  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>