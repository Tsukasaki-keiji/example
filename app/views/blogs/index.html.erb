<%= render 'layouts/header' %>

<h1>全ての投稿</h1>

<table>
  <tread>
    <tr>
      <th>投稿</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </tread>

 <tbody>
   <% @blogs.each do |blog| %>
    <tr>
     <td><%= link_to blog.title, blog_path(blog), class: "blog_#{blog.id}" %></td>
     <td><%= blog.image %></td>
     <td><%= blog.body %></td>
    </tr>
   <% end %>
 </tbody>
</table>