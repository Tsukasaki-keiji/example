<% if @user.errors.any? %>
  <%= @user.errors.count %> error<br>
  <%= @user.errors.full_messages.each do |message| %>
  <%= message %><br>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="form-group">
      <h2>プロフィール編集</h2>
      <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label "名前" %>
        <%= f.text_field :name, class:"form-control name", placeholder:"Name" %>
      </div>
      <div class="form-group">
        <%= f.label "画像" %>
        <%= f.attachment_field :profile_image, placeholder:"ProfileImage", class:"user-edit-form" %>
      </div>
      <div class="form-group">
        <%= f.label "プロフィール" %>
        <%= f.text_area :introduction, class:"form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "編集内容を保存する", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
      </div>
      <% end %>
    </div>
  </div>
</div>