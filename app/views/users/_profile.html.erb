<% if current_user.id == user.id %>
<div class="container">
  <div class="row">
    <table>
      <h2>登録情報</h2>
      <tr><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format:'jpeg', class:"pull-left profile-img", fallback:"no_image.jpg" %></tr>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
      <%= link_to 'プロフィール編集', edit_user_path(user), class:"btn btn-primary btn-block edit_user_#{current_user.id}" %>
    </table>
  </div>
</div>
<% end %>